{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,

    "target": "es6",
    "module": "es6",
    "outDir": "dist",
		"declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": [ "dom", "es2015" ],

		"typeRoots": [ "./node_modules/@types/" ],

    "noEmitHelpers": true,
    "importHelpers": true,

    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",

    "removeComments": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true
  },
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"./node_modules"
	]
}
