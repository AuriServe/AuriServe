@import '../../common/src/reset.css'
@import 'tailwindcss/base'
@import 'tailwindcss/components'
@import 'tailwindcss/utilities'

:root
	--tw-content: ' '

@font-face
	font-weight: 100 900
	font-family: 'Roboto'
	src: url('/admin/asset/font_roboto.ttf') format('truetype')

@property --icon-primary
	syntax: '<color>'

@property --icon-secondary
	syntax: '<color>'

@layer utilities
	.interact-none
		user-select: none
		pointer-events: none

	.interact-auto
		user-select: auto
		pointer-events: auto

	.cursor-resize-ns
		cursor: ns-resize

	.tri
		clip-path: polygon(0 0, 0% 100%, 100% 100%)

	.group:not(:hover):not(:focus-visible) .feature-small
		height: 5.25rem !important

	.text-shadow
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.10)

	.text-shadow-md
		text-shadow: 0 4px 8px rgba(0, 0, 0, 0.12), 0 2px 4px rgba(0, 0, 0, 0.08)

	.text-shadow-lg
		text-shadow: 0 15px 30px rgba(0, 0, 0, 0.11), 0 5px 15px rgba(0, 0, 0, 0.08)

	.text-shadow-none
		text-shadow: none

html.AS_APP
	overflow-x: hidden

