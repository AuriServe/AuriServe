html.AS_APP
	overflow-y: scroll
	-webkit-tap-highlight-color: rgba(255, 255, 255, 0)

	body
		@media (pointer: fine)
			&::-webkit-scrollbar, *::-webkit-scrollbar
				width: 14px
				height: 14px
				background-color: theme(colors.neutral.900)

			&::-webkit-scrollbar-thumb, *::-webkit-scrollbar-thumb
				border-radius: 9999px
				background-color: theme(colors.neutral.600)
				border: 4px solid theme(colors.neutral.900)
				&:hover
					background-color: theme(colors.neutral.500)

	.scroll-input
		@media (pointer: fine)
			&::-webkit-scrollbar
				width: 14px
				height: 14px
				border-radius: 4px
				background-color: theme(colors.neutral.input)

			&::-webkit-scrollbar-thumb
				border-radius: 9999px
				background-color: theme(colors.neutral.500)
				border: 4px solid theme(colors.neutral.input)

				&:hover
					background-color: theme(colors.neutral.400)

			&:focus

				&::-webkit-scrollbar
					background-color: theme(colors.neutral.700)

				&::-webkit-scrollbar-thumb
					border: 4px solid theme(colors.neutral.700)


.AS_TRANSITION_THEME, .AS_TRANSITION_THEME *, .AS_TRANSITION_THEME *::before, .AS_TRANSITION_THEME *::after
	transition: all 0.25s 0s !important

.AS_ROOT
	@apply font-sans

	*::selection
		@apply bg-neutral-500/50
