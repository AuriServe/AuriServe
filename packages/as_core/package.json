  "license": "AGPL-3.0-only",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AuriServe/AuriServe.git"
  },
  "scripts": {
    "dev": "nodemon --config nodemon.json",
    "lint": "eslint -c .eslintrc.js src/**/*.ts",
    "test": "echo \"Error: run tests from root\" && exit 1",
    "build": "npm run lint && tsc --project tsconfig.json && pkg package.json --options expose-gc --compress GZip --out-path dist && npm run clean",
    "clean": "find src -name '*.js' -type f -delete"
  },
  "pkg": {
    "assets": [
      "src/views/*",
      "interface/res/**/*",
      "interface/build/*"
    ]
  },
  "bugs": {
    "url": "https://github.com/AuriServe/AuriServe/issues"
  },
