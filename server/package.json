{
  "name": "@auriserve/server",
  "version": "0.0.0",
  "description": "Core Server for AuriServe",
  "main": "src/Main.js",
  "bin": "src/Main.js",
  "keywords": [
    "auriserve",
    "server",
    "express"
  ],
  "author": "Auri <me@auri.xyz>",
  "homepage": "https://github.com/AuriServe",
  "license": "AGPL-3.0-only",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AuriServe/AuriServe.git"
  },
  "scripts": {
    "dev": "nodemon",
    "debug": "node --inspect -r ts-node/register src/Main.ts -- --verbose",
    "lint": "eslint -c .eslintrc.js src/**/*.ts",
    "build": "npm run lint && tsc --project tsconfig.json && nexe --target linux-x86-12.9.1 --name AuriServe --output dist/AuriServe -r 'src/views/*' -r 'interface/dist/*' -r 'interface/res/**/*' && npm run clean",
    "clean": "find src -name '*.js' -type f -delete"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js,.tsx,.json",
    "exec": "npm run lint & ts-node --project tsconfig.json src/Main.ts -- --verbose",
    "quiet": true
  },
  "bugs": {
    "url": "https://github.com/AuriServe/AuriServe/issues"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/debounce": "^1.2.0",
    "@types/escape-html": "^1.0.1",
    "@types/express-fileupload": "^1.1.6",
    "@types/jsdom": "^16.2.5",
    "@types/mime": "^2.0.3",
    "@types/minimist": "^1.2.1",
    "@types/mongodb": "^3.6.3",
    "@types/node": "^14.14.17",
    "@types/prompt": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "^7.21.0",
    "eslint-plugin-jsdoc": "^32.2.0",
    "frontend": "file:../frontend",
    "nodemon": "^2.0.6",
    "pkg": "^4.4.9",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "common": "file:../common/dist",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "escape-html": "^1.0.3",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "graphql": "^15.5.0",
    "image-size": "^0.9.3",
    "jimp": "^0.16.1",
    "log4js": "^6.3.0",
    "mime": "^2.4.6",
    "minimist": "^1.2.5",
    "mongodb": "^3.6.8",
    "mongoose": "^5.12.11",
    "preact": "^10.5.7",
    "preact-render-to-string": "^5.1.12",
    "prompt": "^1.0.0",
    "rate-limiter-flexible": "^2.2.1",
    "recursive-watch": "^1.1.4",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.3"
  }
}
